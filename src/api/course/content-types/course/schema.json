{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "course"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "course_name": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "minLength": 3
    },
    "time_of_completion_weeks": {
      "type": "integer"
    },
    "level_of_difficulty": {
      "type": "enumeration",
      "enum": [
        "Easy",
        "Medium",
        "Hard"
      ],
      "required": true,
      "default": "Easy"
    },
    "course_image": {
      "allowedTypes": [
        "images",
        "videos"
      ],
      "type": "media",
      "multiple": false
    },
    "course_discription": {
      "type": "richtext"
    },
    "topics": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::topic.topic",
      "mappedBy": "course"
    }
  }
}
